{
  "permissions": {
    "allow": [
      "Fetch(https://github.com/*)",
      "Fetch(https://zenn.dev/*)",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(go test:*)",
      "Bash(go run:*)",
      "Bash(go mod:*)",
      "Bash(go get:*)",
      "Bash(go vet:*)",
      "Bash(go fmt:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(mkdir:*)",
      "Bash(git log:*)",
      "Bash(git pull:*)",
      "Bash(git checkout:*)",
      "Bash(git diff:*)"
    ],
    "deny": [
      "Bash(go build:*)",
    ],
    "ask": [
      "Bash(rm:*)"
    ]
  },
  "env": {
    "DISABLE_AUTOUPDATER": "1"
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay $HOME/.claude/sounds/shaaan.mp3"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay $HOME/.claude/sounds/higurashi.mp3"
          }
        ]
      }
    ]
  }
}
