{
  "permissions": {
    "allow": [
      "Fetch(https://github.com/*)",
      "Fetch(https://zenn.dev/*)",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(go:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(mkdir:*)",
      "Bash(git log:*)",
      "Bash(git pull:*)",
      "Bash(git checkout:*)",
      "Bash(git diff:*)"
    ],
    "deny": [
      "Bash(rm:*)"
    ]
  },
  "env": { "DISABLE_AUTOUPDATER": "1" },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay $HOME/.claude/sounds/shaaan.mp3"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay $HOME/.claude/sounds/higurashi.mp3"
          }
        ]
      }
    ]
  }
}